package bai.tap.tuan.pkg2;

import java.awt.Color;
import java.awt.Container;
import java.awt.Font;
import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class Bai_3_X_AXIS extends JFrame {
    public Bai_3_X_AXIS() {
        super("H·ªçc BoxLayout");
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        JPanel panel = new JPanel();
        panel.setLayout(new BoxLayout(panel, BoxLayout.X_AXIS));
//        panel.setLayout(new BoxLayout(panel, BoxLayout.Y_AXIS));
        JButton button1 = new JButton("BoxLayout");
        button1.setForeground(Color.RED);
        Font font = new Font("Arial", Font.BOLD / Font.ITALIC, 25);
        button1.setFont(font);
        panel.add(button1);
        JButton button2 = new JButton("X_AXIS");
        button2.setForeground(Color.BLUE);
        button2.setFont(font);
        panel.add(button2);
        JButton button3 = new JButton("Y_AXIS");
        button3.setForeground(Color.ORANGE);
        button3.setFont(font);
        panel.add(button3);
        Container container = getContentPane();
        container.add(panel);
    }
    public static void main(String[] args) {
        Bai_3_X_AXIS ui = new Bai_3_X_AXIS();
        ui.setSize(400, 300);
        ui.setLocationRelativeTo(null);
        ui.setVisible(true);
    }
}